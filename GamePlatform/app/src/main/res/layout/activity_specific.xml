<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <!--   背景图片     -->
        <ImageView
            android:id="@+id/Specific_ImageView_1"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:contentDescription="@string/game_1"
            android:scaleType="centerCrop"
            android:src="@drawable/game_1"
            ></ImageView>
        <!--  描述及评分等   -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            >
            <LinearLayout
                android:id = "@+id/SpecificLinearLayout1"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/Text_GameType_Recommend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recoDisc"
                        android:textSize="15sp"
                        android:textColor="@color/orange"
                        android:background="@drawable/label2forreco"
                        ></TextView>

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"></TextView>

                    <TextView
                        android:id="@+id/Text_GameType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gameType1"
                        android:textSize="15sp"
                        android:textColor="@color/lightText"
                        android:background="@drawable/labels"
                        ></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/download"
                        android:textSize="15sp">
                    </TextView>

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"></TextView>

                    <TextView
                        android:id="@+id/thedownloadnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500">
                    </TextView>

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/concern"
                        android:textSize="15sp">
                    </TextView>

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"></TextView>

                    <TextView
                        android:id="@+id/theconcernnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="89">
                    </TextView>


                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            </LinearLayout>

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.863"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4"
                android:src="@drawable/star"></ImageView>

            <TextView
                android:id="@+id/gameScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scoreGame1"
                android:textColor="@color/lightText"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.96"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--  下载按钮      -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/downloadbutton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/downloadbutton"
                android:text="@string/downloadnum"
                android:textColor="@color/white"
                android:textSize="20sp"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/detailbutton"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="50dp"
                android:text="@string/detail"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                style="?android:attr/borderlessButtonStyle"
                >
            </Button>

            <Button
                android:id="@+id/evaluatebutton"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="33dp"
                android:text="@string/evaluation"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/gray"
                style="?android:attr/borderlessButtonStyle"
                >
            </Button>

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalscrollview1"
            android:visibility="visible">
            <LinearLayout
                android:id="@+id/detaillayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="320dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    >
                    <ImageView
                        android:id="@+id/Image_Detail_1"
                        android:layout_width="320dp"
                        android:layout_height="200dp"
                        android:src="@drawable/game_1"
                        android:scaleType="centerCrop">
                    </ImageView>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="320dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    >
                    <ImageView
                        android:id="@+id/Image_Detail_2"
                        android:layout_width="320dp"
                        android:layout_height="200dp"
                        android:src="@drawable/game_2"
                        android:scaleType="centerCrop">
                    </ImageView>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="320dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    >
                    <ImageView
                        android:id="@+id/Image_Detail_3"
                        android:layout_width="320dp"
                        android:layout_height="200dp"
                        android:src="@drawable/game_3"
                        android:scaleType="centerCrop">
                    </ImageView>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>
        <LinearLayout
            android:id="@+id/evaluationlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gameevaluation"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"></TextView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="24dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/lightgray">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/user_headportait_1"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/genshin">
                        </ImageView>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/user_name_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="随便取个名"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="5dp">

                            </TextView><TextView
                            android:id="@+id/comment_1_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2天前"
                            android:textStyle="bold"
                            android:textColor="@color/gray"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="0dp">

                        </TextView>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/star">
                        </ImageView>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/star">
                        </ImageView>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/star">
                        </ImageView>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/star">
                        </ImageView>
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginTop="9dp"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/graystar2">
                        </ImageView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/comment_1_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/userevaluation"
                            android:textColor="@color/black"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="10dp"
                            ></TextView>
                    </LinearLayout>
                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/lightgray">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/user_headportait_2"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/genshin">
                        </ImageView>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/user_name_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="好名都让不知道谁取了"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="5dp">

                            </TextView><TextView
                            android:id="@+id/comment_2_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2天前"
                            android:textStyle="bold"
                            android:textColor="@color/gray"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="0dp">

                        </TextView>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/star">
                        </ImageView>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/star">
                        </ImageView>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/star">
                        </ImageView>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/star">
                        </ImageView>
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginTop="9dp"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/graystar2">
                        </ImageView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/comment_2_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/userevaluation"
                            android:textColor="@color/black"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="10dp"
                            ></TextView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:id="@+id/game_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/brief"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strategytype"
                android:textSize="15sp"
                android:textColor="@color/lightText"
                android:background="@drawable/labels"
                android:layout_marginLeft="20dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rpgtype"
                android:textSize="15sp"
                android:textColor="@color/lightText"
                android:background="@drawable/labels"
                android:layout_marginLeft="8dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/revenue"
                android:textSize="15sp"
                android:textColor="@color/lightText"
                android:background="@drawable/labels"
                android:layout_marginLeft="8dp"
                ></TextView>
        </LinearLayout>
        <TextView
            android:id="@+id/brief_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/briefcontent"
            android:textColor="@color/black"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="3dp"
            >

        </TextView>
    </LinearLayout>
</ScrollView>
